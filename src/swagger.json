    "paths": {
        "/schools": {
            "post": {
                "tags": [
                    "School"
                ],
                "summary": "Search for a school",
                "description": "Search for a school",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "level": {
                                        "type": "string"
                                    },
                                    "course": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "ensino médio",
                                    "description": "Técnico de informática"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Not found."
                    }
                }
            },
            "get": {
                "tags": [
                    "School"
                ],
                "summary": "Search for a school",
                "description": "Automatic search by location",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
